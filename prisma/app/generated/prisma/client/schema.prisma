generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model PortfolioItem {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  year        String
  image       String
  description String
  content     String   @db.Text
  category    String
  section     Section  @relation(fields: [category], references: [slug])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("portfolio_items")
}

model Section {
  id             String          @id @default(cuid())
  title          String
  description    String          @db.Text
  image          String?
  slug           String          @unique
  order          Int
  portfolioItems PortfolioItem[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("sections")
}
